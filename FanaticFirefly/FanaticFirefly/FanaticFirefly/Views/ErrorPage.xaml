<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FanaticFirefly.Views.ErrorPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Spacing="10">
    <Label WidthRequest="150" Text="{Binding Message}" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
    <Button WidthRequest="150" Text="{Binding ButtonText}" Command="{Binding ShowErrorCommand}"/>
    <Label Hidden="{Binding IsHidden}" WidthRequest="150" Text="{Binding ErrorMessage}" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>