<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FanaticFirefly.Views.LoginPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Spacing="10">
      <Label Text="UserName:" WidthRequest="250"/>
      <Entry Text="{Binding UserName}" WidthRequest="250"/>
      <Label Text="Password:" WidthRequest="250"/>
      <Entry Text="{Binding PassWord}" IsPassword="True" WidthRequest="250"/>
      <Button Text="Login" WidthRequest="250" Command="{Binding LoginCommand}"/>
  </StackLayout>
  
</ContentPage>